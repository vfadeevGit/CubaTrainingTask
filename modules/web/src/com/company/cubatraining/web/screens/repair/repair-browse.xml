<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://repairBrowse.caption"
        focusComponent="repairsTable"
        messagesPack="com.company.cubatraining.web.screens.repair">
    <data readOnly="true">
        <collection id="repairsDc"
                    class="com.company.cubatraining.entity.Repair"
                    view="repair-browseView">
            <loader id="repairsDl">
                <query>
                    <![CDATA[select e from cubatraining_Repair e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="repairsTable"
            spacing="true">
        <filter id="filter"
                applyTo="repairsTable"
                dataLoader="repairsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="repairsTable"
                    width="100%"
                    dataContainer="repairsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="description"/>
                <column id="employee"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="repairsTable.create"/>
                <button id="editBtn" action="repairsTable.edit"/>
                <button id="removeBtn" action="repairsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
